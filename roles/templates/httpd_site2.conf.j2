server {
    listen  80;

    server_name {{ site2 }} www.{{ site2 }};

    location / {
        root  /var/www/{{ site2 }};
        index  index.html index.htm;
        try_files $uri $uri/ =404;
    }

    error_page  500 502 503 504  /50x.html;
    location = /50x.html {
        root  /usr/share/nginx/html;
    }
}


