server {
    listen  80;

    server_name {{ site1 }} www.{{ site1 }};

    location / {
        root  /var/www/{{ site1 }};
        index  index.html index.htm;
        try_files $uri $uri/ =404;
    }

    error_page  500 502 503 504  /50x.html;
    location = /50x.html {
        root  /usr/share/nginx/html;
    }
}
